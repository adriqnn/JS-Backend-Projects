<section class="edit-form-container">

    <form action="/book/{{book._id}}/edit" method="post">
        <h3>Edit Book Review</h3>
        <label>Title</label>
        <input type="text" name="title" class="box" value="{{book.title}}" id="title">
        <label>Author</label>
        <input type="text" name="author" class="box" value="{{book.author}}" id="author">
        <label>Genre</label>
        <input type="text" name="genre" class="box" value="{{book.genre}}" id="genre">
        <label>Stars</label>
        <input type="number" name="stars" class="box" value="{{book.stars}}" id="stars">
        <label>Image</label>
        <input type="text" name="image" class="box" value="{{book.image}}" id="image">
        <label>Review</label>
        <textarea class="box"
            name="bookreview">{{book.bookreview}}</textarea>
        <input type="submit" value="Edit" class="btn">
    </form>
</section>