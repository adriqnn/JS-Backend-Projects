<main>
    {{#if errors}}
        <div class="errorContainer">
            {{#each errors}}
                <p>{{this}}</p>
            {{/each}}
        </div>
    {{/if}}
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Announcement</h1>
            <h4>Post your coins to sell</h4>
            <form action="/model/create" method="post">
                <label>Name:</label>
                <input type="text" id="name" name="name" placeholder="Bitcoin" value="{{body.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" placeholder="http://..." value="{{body.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" placeholder="31,166.71" value="{{body.price}}">
                <label>Description:</label>
                <textarea id="description" name="cryptoDescription" placeholder="Introduce your coins...">{{body.cryptoDescription}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="paymentMethod">
                    <option value="crypto-wallet" {{#if check.isWallet}} selected{{/if}}>Crypto Wallet</option>
                    <option value="credit-card" {{#if check.isCredit}} selected{{/if}}>Credit Card</option>
                    <option value="debit-card" {{#if check.isDebit}} selected{{/if}}>Debit Card</option>
                    <option value="paypal" {{#if check.isPaypal}} selected{{/if}}>PayPal</option>
                </select>
                <input type="submit" id="btn" value="TRADE"></input>
            </form>
        </div>
    </section>
</main>