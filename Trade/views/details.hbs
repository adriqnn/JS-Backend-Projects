<main>
    {{#if errors}}
        <div class="errorContainer">
            {{#each errors}}
                <p>{{this}}</p>
            {{/each}}
        </div>
    {{/if}}
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="/static/images/bitcoin.png">
        </div>
        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{model.name}}</h1>
                <h3 id="payment">{{model.paymentMethod}}</h3>
                <p id="price"><span>{{mode.price}}</span></p>
                <p id="description">{{model.cryptoDescription}}</p>
            </div>
            {{#if email}}
                <div class="product-btn">
                    {{#if model.isOwner}}
                        <div class="author">
                            <a href="/model/{{model._id}}/edit" class="btn-edit">Edit</a>
                            <a href="/model/{{model._id}}/delete" class="btn-delete">Delete</a>
                        </div>
                    {{else}}
                        {{#if model.action}}
                            <p class="buy-message">You already bought these crypto coins.</p>
                        {{else}}
                            <a href="/model/{{model._id}}/action" class="btn-buy">Buy</a>
                        {{/if}}
                    {{/if}}
                </div>
            {{/if}}
        </div>
    </section>
</main>