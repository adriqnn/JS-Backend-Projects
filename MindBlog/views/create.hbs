<main>
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Blog</h1>
            <form action="/model/create" method="post">
                <label>Title:</label>
                <input name="title" type="text" id="title" placeholder="Title..." value="{{body.title}}">
                <label>Image:</label>
                <input name="image" type="text" id="image" placeholder="http://..." value="{{body.image}}">
                <label>Content:</label>
                <textarea id="content" name="content" placeholder="Content...">{{body.content}}</textarea>
                <label>Blog Category:</label>
                <input name="blogCategory" type="text" id="category" placeholder="Blog Category..." value="{{body.blogCategory}}">
                <input type="submit" id="btn" value="POST">
            </form>
        </div>
    </section>
</main>