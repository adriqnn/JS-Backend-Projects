<main>
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Blog</h1>
            <form action="/model/{{model._id}}/edit" method="post">
                <label>Title:</label>
                <input name="title" type="text" id="name" value="{{model.title}}">
                <label>Image:</label>
                <input name="image" type="text" id="image" value="{{model.image}}">
                <label>Content:</label>
                <textarea id="content" name="content">{{model.content}}</textarea>
                <label>Blog Category:</label>
                <input name="blogCategory" type="text" id="catelory" value="{{model.blogCategory}}">
                <input type="submit" id="btn" value="EDIT">
            </form>
        </div>
    </section>
</main>