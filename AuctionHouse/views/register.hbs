<main>
    {{#if errors}}
        <div class="error-box">
            {{#each errors}}
                <p>{{this}}</p>
            {{/each}}
        </div>
    {{/if}}
    <section id="register-section" class="narrow">
        <h1 class="item">Register</h1>
        <div class="item padded align-center">
            <form class="aligned" method="post" action="/auth/register">
                <label>
                    <span>Email</span>
                    <input type="text" name="email" placeholder="Email.." value="{{body.email}}">
                </label>
                <label>
                    <span>First name</span>
                    <input type="text" name="firstName" placeholder="First Name.." value="{{body.firstName}}">
                </label>
                <label>
                    <span>Last name</span>
                    <input type="text" name="lastName" placeholder="Last Name.." value="{{body.lastName}}">
                </label>
                <label>
                    <span>Password</span>
                    <input type="password" name="password" placeholder="Password..">
                </label>
                <label>
                    <span>Repeat Password</span>
                    <input type="password" name="repass" placeholder="Confirm Password..">
                </label>
                <div class="align-center">
                    <input class="action" type="submit" value="Create Account">
                </div>
            </form>
        </div>
    </section>
</main>