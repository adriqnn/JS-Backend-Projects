<main>
    {{#if errors}}
        <div class="error-box">
            {{#each errors}}
                <p>{{this}}</p>
            {{/each}}
        </div>
    {{/if}}
    <section id="create-section">
        <h1 class="item">Edit Auction</h1>
        <div class="item padded align-center">
            <form class="layout left large" method="post" action="/model/{{model._id}}/edit">
                <div class="col aligned">
                    <label>
                        <span>Title</span>
                        <input type="text" name="title" value="{{model.title}}"></label>
                    <label>
                        <span>Category</span>
                        <select name="category">
                            <option value="Real Estate" {{#if check.isRealEstate}}selected{{/if}}>Real Estate</option>
                            <option value="Vehicles" {{#if check.isVehicle}}selected{{/if}}>Vehicles</option>
                            <option value="Furniture" {{#if check.isFurniture}}selected{{/if}}>Furniture</option>
                            <option value="Electronics" {{#if check.isElectronics}}selected{{/if}}>Electronics</option>
                            <option value="Other" {{#if check.isOther}}selected{{/if}}>Other</option>
                        </select>
                    </label>
                    <label>
                        <span>Image URL</span>
                        <input type="text" name="imageUrl" value="{{model.imageUrl}}">
                    </label>
                    <label>
                        <span>Starting price</span>
                        <input type="number" name="price" value="{{price}}" {{#if model.priceDisabled}} disabled{{/if}}>
                    </label>
                </div>
                <div class="content pad-med align-center vertical">
                    <label>
                        <span>Description</span>
                        <textarea name="description">{{model.description}}</textarea>
                    </label>
                    <div class="align-center">
                        <input class="action" type="submit" value="Update Listing">
                    </div>
                </div>
            </form>
        </div>
    </section>
</main>