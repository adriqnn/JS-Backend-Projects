<main>
    {{#if errors}}
        <div class="error-box">
            {{#each errors}}
                <p>{{this}}</p>
            {{/each}}
        </div>
    {{/if}}
    <section id="catalog-section">
        <h1 class="item">
            {{model.title}}
            <div class="f-right">
                <a class="action pad-small f-left" href="/model/{{model._id}}/edit">Edit</a>
                <a class="action pad-small f-left" href="/model/{{model._id}}/delete">Delete</a>
            </div>
        </h1>
        <div class="item padded">
            <div class="layout right large">
                <div class="col">
                    <img src="{{model.imageUrl}}" class="img-large">
                </div>
                <div class="content pad-med">
                    <p>In category: <strong>{{model.category}}</strong></p>
                    <p>{{model.description}}</p>
                    <div class="align-center">
                        <div>
                            Current price: $<strong>{{model.price}}</strong>
                        </div>
                        <div>
                            {{#if bidder.bidder}}
                                Bid by <strong>{{bidder.bidder}}</strong>
                            {{else}}
                                No bids
                            {{/if}}
                            {{#if bidder.bidder}}
                            <a class="action pad-med cta" href="/model/{{model._id}}/close">Close Auction</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            <footer>Listed by {{owner}}</footer>
        </div>
    </section>
</main>