<main>
    {{#if errors}}
        <div class="error-box">
            {{#each errors}}
                <p>{{this}}</p>
            {{/each}}
        </div>
    {{/if}}
    <section id="catalog-section">
        <h1 class="item">
            {{model.title}}
        </h1>
        <div class="item padded">
            <div class="layout right large">
                <div class="col">
                    <img src="{{model.imageUrl}}" class="img-large">
                </div>
                <div class="content pad-med">
                    <p>In category: <strong>{{model.category}}</strong></p>
                    <p>{{model.description}}</p>
                    <div class="align-center">
                        <div>
                            Current price: $<strong>{{model.price}}</strong>
                        </div>
                        {{#if email}}
                            {{#if model.isHighestBidder}}
                                <div>You are currently the <strong>highest bidder</strong> for this auction</div>
                            {{else}}
                                <form class="vertical" method="post" action="/model/{{model._id}}/action">
                                    <label><span>Bid amount</span><input type="number" name="bid"></label>
                                    <input class="action" type="submit" value="Place bid">
                                </form>
                            {{/if}}
                        {{/if}}
                    </div>
                </div>
            </div>
            <footer>Listed by {{owner}}</footer>
        </div>
    </section>
</main>